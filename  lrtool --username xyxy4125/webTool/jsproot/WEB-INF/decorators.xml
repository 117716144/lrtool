<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/decorators">
    <decorator name="main" page="home.jsp">
        <pattern>/*</pattern>
        <exclude>/bo/*</exclude>
    </decorator>
        
    <excludes>
        <pattern>/style/*</pattern>
        <pattern>/images/*</pattern>
        <pattern>/js/*</pattern>
        <pattern>/editor/*</pattern>
        <pattern>/areas*</pattern>
        <pattern>/server-error.jsp</pattern>
        <pattern>/missing.jsp</pattern>
    </excludes>

    <decorator name="home" page="home.jsp">
        <pattern>/index.jsp</pattern>
        <pattern>/index.html</pattern>
    </decorator>

    <decorator name="bo" page="bo.jsp">
        <pattern>/bo/*</pattern>
        <exclude>/bo/login.jsp</exclude>
        <exclude>/bo/toLogin.action</exclude>
        <exclude>/bo/login.action</exclude>
    </decorator>
    
    <decorator name="blank" page="main.jsp">
        <pattern>/bo/login.jsp</pattern>
        <pattern>/bo/toLogin.action</pattern>
        <pattern>/bo/login.action</pattern>
    </decorator>
    <decorator name="blank" page="site-news.jsp">
        <pattern>/news/*</pattern>
    </decorator>
</decorators>
